<%- include('../partials/header') %>
<h1>Edit <%= book.title %></h1>
<section class="container" id="edit">
    <form id="edit-form" action="/books/<%= book._id %>?_method=PUT" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Book Title: </label>
            <input type="text" name="title" class="form-control" value="<%= book.title %>">
        </div>
        <div class="mb-3">
            <label for="author" class="form-label">Author: </label>
            <input type="text" name="author" class="form-control" value="<%= book.author %>">
        </div>
        <div class="mb-3">
            <label for="price">Cost: </label>
            <input type="number" name="price" class="form-control" value= "<%=book.price %>">
        </div>
        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Update</button>
        </div>
    </form>
    <% if (user && user._id.equals(recipe.user)) { %>
    <form action="/books/<%= book._id %>?_method=DELETE" method="POST">
        <button type="submit" style="margin-left: 10px;" class="btn btn-danger">Delete Book</button>
    </form>
    <% } %>
</section>
<%- include('../partials/footer') %>